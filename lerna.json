{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "npmClientArgs": ["--no-lockfile"],
  "ignoreChanges": ["**/__tests__/**", "**/*.md", "**/.storybook/**"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): Publish",
      "registry": "https://npm.pkg.github.com"
    }
  }
}
